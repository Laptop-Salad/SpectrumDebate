extends base.pug

block content 
    main(id="editStatement")
        form(method="POST" action="{$domain}/edit-statement/{$statement['id']}")
            input(type="text" name="title" id="title" placeholder="Title" value="{$statement['title']}" required)
            textarea(type="text" name="text" id="text" placeholder="Write a description" required) = "{$statement['text']}"
            input(type="submit" value="Update")