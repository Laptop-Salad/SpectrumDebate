extends base.pug

block content
    main(class="statements") 
        each $statement in $statements
            div(class="statement" role="link" tabindex="0" onclick="window.location.href='{$domain}/statement/{$statement[0]}'") 
                div(class="percentages")
                    div(class="disagree")
                    div(class="neutral")
                    div(class="agree")

                div(class="content")

                    div(class="inline")
                        h2(class="statement-title") = $statement[2] 
                        p(class="margin-right")
                            a(class="username" href="{$domain}/user/{$statement[1]}") = $statement[1]
                            span = "stated "
                            span = $statement[4]
