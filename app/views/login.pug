extends min_nav.pug

block content
    main(id="accountForm" class="account-page")
        div(class="poster")
            div(class="poster-img")

        div(class="account-form")
            h1 = "Login"
            form(id="login" method="POST" action="/login")
                label(for="username" class="fw-bold") = "Username"
                input(id="username" class="form-control" name="username" type="text" placeholder="Username" minlength="3" maxlength="10" required)
                
                label(for="password" class="fw-bold") = "Password" 
                input(id="password" class="form-control" name="userpass" type="password" placeholder="Password" minlength="8" maxlength="20" required)
                input(type="submit" value="Login")
            p(id="showInvalid") = "Your username or password is invalid"
    