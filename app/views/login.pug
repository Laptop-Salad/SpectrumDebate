extends base.pug

block content
    main(id="loginForm" class="account-page")
        div(class="account-form")
            h1 = "Login"
            form(id="login" method="POST" action="/login")
                input(id="username" name="username" type="text" placeholder="Username" minlength="3" maxlength="10" required)
                input(id="password" name="userpass" type="password" placeholder="Password" minlength="8" maxlength="20" required)
                input(type="submit" value="Submit")
            p(id="showInvalid") = "Your username or password is invalid"
    